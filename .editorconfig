# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,rst,ini}]
indent_style = space
indent_size = 4

[*.py]
max_line_length = 120
multi_line_output = 3
recursive = true
skip = venv/
include_trailing_comma = true
force_grid_wrap = 0
use_parentheses = true

[*.yml]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[{Makefile, *.bat}]
indent_style = tab
indent_size = 4

[*.bat]
end_of_line = crlf
